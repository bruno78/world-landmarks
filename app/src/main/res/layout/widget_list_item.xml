<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/ll_widget_list_item"
    android:layout_width="@dimen/card_dimen"
    android:layout_height="@dimen/card_dimen"
    android:background="@drawable/card"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_widget_landmark_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:contentDescription="@string/landmark_image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_widget_landmark_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="4"
        android:paddingBottom="@dimen/x_small_padding"
        android:paddingLeft="@dimen/x_small_padding"
        android:paddingRight="@dimen/x_small_padding"
        android:paddingTop="@dimen/padding"
        android:textSize="@dimen/title_size1"
        tool:text="Eiffel Tower"/>

    <TextView
        android:id="@+id/tv_widget_landmark_location"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="@dimen/padding"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        tool:text="Paris"/>

</LinearLayout>